<% provide(:mode, 'management') %>
<% provide(:title, 'Create Project') %>
<h1>Create a New Project</h1>

    <div class="row">
      <div class="offset4">
        <%= form_for(@project) do |f| %>
          <%= render 'shared/error_messages', object: f.object %>
          
          <%= f.label :title %>
          <%= f.text_field :title %>

          <div class="redactor_box">
        <%= f.text_area :content, placeholder: "Project Content Goes Here...", :class => "redactor"%>
      </div>

          <br>

          <%= f.submit "Create project", class: "btn btn-large btn-inverse" %>
        <% end %>
      </div>
  </div>
</div>