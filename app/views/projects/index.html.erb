<h1>Listing Projects</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.title %></td>
    <td>&nbsp&nbsp&nbsp&nbsp&nbsp</td>
    <td><%= link_to 'Show', project %></td>
    <td>|</td>
    <td><%= link_to 'Rich Text Editing', edit_rich_project_path(project) %>
    </td>
    <td>|</td>
    <td><%= link_to 'Raw HTML Editing', edit_raw_project_path(project) %>
    </td>
    <td>|</td>
    <td><%= link_to 'Destroy', project, method: :delete,
                                     data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

