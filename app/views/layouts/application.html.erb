<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="description" content="">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

  <link rel="author" href="https://plus.google.com/u/0/109859280204979591787/about"/>

  <style type="text/css">
      body {
          font-family: 'Open Sans', sans-serif;
      }
  </style>
 
  <% if ENV['KENZABUROSUSHI_ENV'] == 'production' %>
	  <script>
		(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
		(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
		m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
		})(window,document,'script','//www.google-analytics.com/analytics.js','ga');
		ga('create', 'UA-52369682-1', 'auto');
		ga('require', 'displayfeatures');
		ga('send', 'pageview');
	  </script>
  <% end %>

</head>
<body class="loading">
	<div class="wrapper">
		<% if yield(:mode) == 'management' %>
			<%= render 'layouts/dashboard_header' %>
		<% else %>
			<%= render 'layouts/header' %>
		<% end %>
			
		<% if yield(:mode) == 'management' %>
			<div class="navbar-placeholder">
			</div>
			<div class="container-fluid">
		<% else %>
			<div class="container">
		<% end %>
			  <% flash.each do |key, value| %>
			    <div id="flash" class="alert alert-<%= key %>"><%= value %></div>
			  <% end %>
			</div>
			<% if yield(:mode) == 'management' %>
				<div class="management-wrapper">
			<% end %>
			<%= yield %>
			<% if yield(:mode) == 'management' %>
				</div>
			<% end %>
			<%= render 'layouts/footer' %>
			<%#= debug(params) if Rails.env.development? %>
	</div>
</body>
</html>
