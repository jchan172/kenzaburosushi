<% provide(:mode, 'management') %>
<% provide(:title, 'Retrieve Your Password') %>

<%= image_tag asset_path("ScratchCMS.png"), :class => "centeredimage", 'width' => '200dp' %>

<h5>
	Enter your username and we'll send you an email to reset your password.
</h5>

<div class="account-settings">
  <%= form_for(:session, url: sessions_path) do |f| %>

    <%= f.label :username %>
    <%= f.text_field :username, :autofocus => true %>
		
		<%= f.submit "Send Email", class: "btn btn-large btn-success" %>
  <% end %>
</div>
